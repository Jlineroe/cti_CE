@model IEnumerable<NavegaTIC_CTI.Models.Estado>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Crear nuevo", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.EstadoName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.EstadoName)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.EstadoId }) |
           
            @Html.ActionLink("Eliminar", "Delete", new { id=item.EstadoId })
        </td>
    </tr>
}

</table>
