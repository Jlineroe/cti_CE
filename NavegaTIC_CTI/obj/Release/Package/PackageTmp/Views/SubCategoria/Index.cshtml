@model IEnumerable<NavegaTIC_CTI.Models.Subcategoria>

    @{
        ViewBag.Title = "Index";
        Layout = "~/Views/Shared/_Layout.cshtml";
    }

    <h2>Index</h2>

    <p>
        @Html.ActionLink("Crear nuevo", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CategoriaName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SubcategoriaName)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CategoriaName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SubcategoriaName)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.SubcategoriaId }) |
                   
                    @Html.ActionLink("Eliminar", "Delete", new { id = item.SubcategoriaId })
                </td>
            </tr>
        }

    </table>
